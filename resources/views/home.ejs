<!-- hero section -->
<section class="text-gray-600 body-font">
    <div class="container mx-auto flex px-5 py- md:flex-row flex-col items-center">
        <div class="lg:max-w-lg lg:w-full md:w-1/2 w-5/6 mb-10 md:mb-0">
            <img class="object-cover object-center rounded-full" alt="hero" src="/img/hero.png">
        </div>
        <div
            class="lg:flex-grow md:w-1/2 lg:pl-24 md:pl-16 flex flex-col md:items-start md:text-left items-center text-center">
            <h1
                class="title-font lg:text-full font-black text-red-900 sm:text-4xl text-3xl mb-4 font-medium text-gray-900">
                Order Your Pizza
            </h1>
            <p class="mb-8 leading-relaxed">Are you hungry for food!!! I am here for you</p>


        </div>
    </div>
</section>
<!-- hero section end -->
<!-- prize section -->

<section class="text-gray-600 body-font overflow-hidden">
    <div class="container px-5 py-16 mx-auto">
        <div class="flex flex-col text-center w-full mb-20">
            <h1 class="text-red-900 sm:text-4xl text-3xl font-medium  title-font mb-2 text-gray-900">Pricing</h1>
            <p class="lg:w-2/3 mx-auto leading-relaxed text-base text-gray-500">Whatever you want is here in low
                rate</p>

        </div>
        <div class="flex flex-wrap -m-4">
            <% pizzas.forEach((pizza)=>{ %>
                <div class="p-4 xl:w-1/4 md:w-1/2 w-full">


                    <div class="h-full p-6 rounded-lg border-2 border-gray-300 flex flex-col relative overflow-hidden">
                        <h2 class="text-sm tracking-widest title-font mb-1 font-bold text-2xl text-gray-500">
                            <%= pizza.name %>
                        </h2>
                        <h1 class="text-5xl text-gray-900 pb-4 mb-4 border-b border-gray-200 leading-none text-red-900">
                            <%= pizza.price %>
                        </h1>
                        <p class="flex items-center text-gray-600 mb-2">
                            <span
                                class="w-4 h-4 mr-2 inline-flex items-center justify-center bg-gray-400 text-white rounded-full flex-shrink-0">
                                <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                    stroke-width="2.5" class="w-3 h-3" viewBox="0 0 24 24">
                                    <path d="M20 6L9 17l-5-5"></path>
                                </svg>
                            </span>The typical Neapolitan pizza toppings are fresh mozzarella
                        </p>
                        <p class="flex items-center text-gray-600 mb-2">
                            <span
                                class="w-4 h-4 mr-2 inline-flex items-center justify-center bg-gray-400 text-white rounded-full flex-shrink-0">
                                <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                    stroke-width="2.5" class="w-3 h-3" viewBox="0 0 24 24">
                                    <path d="M20 6L9 17l-5-5"></path>
                                </svg>
                            </span>eatures tomatoes, garlic, oregano, and extra virgin olive oil.
                        </p>
                        <p class="flex items-center text-gray-600 mb-6">
                            <span
                                class="w-4 h-4 mr-2 inline-flex items-center justify-center bg-gray-400 text-white rounded-full flex-shrink-0">
                                <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                    stroke-width="2.5" class="w-3 h-3" viewBox="0 0 24 24">
                                    <path d="M20 6L9 17l-5-5"></path>
                                </svg>
                            </span>Features tomatoes, sliced mozzarella, basil, and extra virgin olive oil.
                        </p>
                        <button data-pizza="<%= JSON.stringify(pizza) %>"
                            class=" add-to-cart bg-red-900 flex items-center mt-auto text-white bg-gray-400 border-0 py-2 px-4 w-full focus:outline-none hover:bg-gray-500 rounded">
                            Add to cart
                        </button>

                    </div>








                </div>
                <% }) %>
        </div>

</section>